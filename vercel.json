{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)\\.(jpg|jpeg|png|gif|svg|webp|ico)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    },
    {
      "source": "/(.*)\\.(js|css)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=600" }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    }
  ],
  "routes": [
    { "src": "/chat-widget.js", "dest": "/chat-widget.js" },
    { "src": "/img/(.*)", "dest": "/img/$1" },
    { "src": "/favicon_intellih.ico", "dest": "/favicon_intellih.ico" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
