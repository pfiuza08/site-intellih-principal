{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)\\.(jpg|jpeg|png|gif|svg|webp|ico)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/(.*)\\.(js|css)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=600" }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/chat-widget.js", "destination": "/chat-widget.js" },
    { "source": "/img/:path*", "destination": "/img/:path*" },
    { "source": "/favicon_intellih.ico", "destination": "/favicon_intellih.ico" },
    { "source": "/chat-icon.png", "destination": "/chat-icon.png" },
    { "source": "/:path*", "destination": "/index.html" }
  ]
}
